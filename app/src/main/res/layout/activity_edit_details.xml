<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5A5A"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".Edit_Details">



    <TextView
        android:id="@+id/itemInfoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Information"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_sitename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemInfoHeader"
        android:hint="Site Name"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:maxLength="40" />

    <EditText
        android:id="@+id/et_siteurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_sitename"
        android:hint="Site URL"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:maxLength="40" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_siteurl"
        android:hint="Username"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:maxLength="40" />

    <EditText
        android:id="@+id/et_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="40" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_pswd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Save"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Delete"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
